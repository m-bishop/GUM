package gum.actions;

import gum.Player;
import gum.items.ItemBase;

public class ActionHeader {
	
	private Player player;
	private Player targetPlayer;
	private ItemBase item;
	private ItemBase targetItem;
	
	public ActionHeader(){
		// no-arg constructor for Bean compatibility
	}
	
	public ActionHeader(Player player, Player targetPlayer, ItemBase item, ItemBase targetItem){
		this.player = player;
		this.targetPlayer = targetPlayer;
		this.item = item;
		this.targetItem = targetItem;
	}

	public Player getPlayer() {
		return player;
	}

	public void setPlayer(Player player) {
		this.player = player;
	}

	public Player getTargetPlayer() {
		return targetPlayer;
	}

	public void setTargetPlayer(Player targetPlayer) {
		this.targetPlayer = targetPlayer;
	}

	public ItemBase getItem() {
		return item;
	}

	public void setItem(ItemBase item) {
		this.item = item;
	}

	public ItemBase getTargetItem() {
		return targetItem;
	}

	public void setTargetItem(ItemBase targetItem) {
		this.targetItem = targetItem;
	}

}
